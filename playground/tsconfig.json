{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "veridical": ["../packages/veridical/src"],
      "@veridical/plugins": ["../packages/plugins/src"],
      "@veridical/nodes": ["../packages/nodes/src"],
      "@veridical/components": ["../packages/components/src"],
      "@veridical/utils": ["../packages/utils/src"],
    },                
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
