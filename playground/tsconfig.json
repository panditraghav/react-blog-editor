{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "markor": ["../../packages/markor/src"],
      "@markor/plugins": ["../../packages/plugins/src"],
      "@markor/nodes": ["../../packages/nodes/src"],
      "@markor/components": ["../../packages/components/src"],
      "@markor/icons": ["../../packages/icons/src"],
      "@markor/utils": ["../../utils/src"],
    },                
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
